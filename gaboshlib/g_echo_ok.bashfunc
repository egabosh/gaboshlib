#!/bin/bash

function g_echo_ok {
 [ -z "$1" ] && return 1
 if [[ -n ${FUNCNAME[1]} ]]
 then
   printf "\033[97m%(%Y-%m-%d %H:%M:%S)T \033[32m$0[$$ ${FUNCNAME[1]}] OK: %s\033[0m\n" -1 "$*"
 else
   printf "\033[97m%(%Y-%m-%d %H:%M:%S)T \033[32m$0[$$] OK: %s\033[0m\n" -1 "$*"
 fi
 g_logger OK: $@
 [ -z $DISPLAY ] || zenity --notification --text="$@"
}

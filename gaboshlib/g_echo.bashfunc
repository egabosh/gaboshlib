#!/bin/bash

function g_echo {
 [ -z "$1" ] && return 0
 if [[ -n ${FUNCNAME[1]} ]]
 then
   printf "\033[97m%(%Y-%m-%d %H:%M:%S)T \033[97m[${FUNCNAME[1]}] %s\033[0m\n" -1 "$*"
 else
   printf "\033[97m%(%Y-%m-%d %H:%M:%S)T \033[97m%s\033[0m\n" -1 "$*"
 fi
 [ -z $g_alltosyslog ] && return 0
 g_logger $@
}
